<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        style="@style/Btn.Blue"
        android:onClick="goVerifyCode"
        android:text="@string/verify_code_input"
        android:textSize="@dimen/sp_14"/>

    <Button
        style="@style/Btn.Blue"
        android:onClick="goHypertext"
        android:text="@string/hypertext_android"
        android:textSize="@dimen/sp_14"/>

    <Button
        style="@style/Btn.Blue"
        android:onClick="goViewPagerHead"
        android:text="@string/viewpager_PagerSlidingTab"
        android:textSize="@dimen/sp_14"/>

</LinearLayout>
